<div class="container p-4">
    <div class="row">
        {{#each note}}
        <div class="col-md-3">
            <div class="card text-center mb-3">
                <div class="card-body">
                    <h3>{{name}}</h3>
                    <p class="m-2">{{descripcion}}</p>
                    <p>{{time created}}</p>
                    <a href="/links/delete/{{id}}" class="btn btn-danger">delete</a>
                    <a href="/links/edit/{{id}}" class="btn btn-secondary">edit</a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 p-4 m-auto ">
            <div class="card text-center">
                <div class="card-header text-white bg-dark">
                    <p>There are not note saved yet.</p>
                </div>
                <div class="card-body">
                    <a href="/links/add">Add new notes</a>
                </div>

            </div>
        </div>
        {{/each}}
    </div>
</div>