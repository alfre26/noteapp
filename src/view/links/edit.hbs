<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-header bg-dark">
                    <h3 class="text-white">Notes</h3>
                </div>
                <div class="card-body">
                    <form action="/links/edit/{{note.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" name="name" id="" value="{{note.name}}" class="form-control" placeholder="Your note" autofocus>
                        </div>
                        <div class="form-group">
                            <textarea name="descripcion" id=""  cols="30" rows="10" class="form-control" placeholder="Description">{{note.descripcion}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary btn-block">Send</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>